<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/HibernateMappingDTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="fr.esigelec.quiz.dto">
	<class name="Question" table="question" lazy="false">
	
		<id name="id" column="id">
			<generator class="native"/>
		</id>
		
		<property name="libelle" column="libelle" type="string"/>
		
        <set name="propositions" table="proposition">
            <key> <column name="idQuestion" not-null="true" /> </key>
            <one-to-many class="Proposition" />
        </set>
        <!-- 
		<many-to-one name="bonneReponse" column="idBonneReponse" class="Proposition" 
        cascade="all" unique="true" not-null="false"/>
        -->
        <many-to-one name="bonneReponse" column="idBonneReponse" class="Proposition" cascade="all" unique="true" not-null="true"/>
	</class>
</hibernate-mapping>
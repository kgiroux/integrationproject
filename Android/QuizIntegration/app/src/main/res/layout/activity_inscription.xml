<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context=".activity.InscriptionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/subscribe"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="30sp" />

    <TextView
        android:layout_below="@id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/name"
        android:id="@+id/nameLabel"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_below="@id/nameLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/name"
        android:background="@drawable/editext"
        android:textSize="30dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_below="@id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/surname"
        android:id="@+id/surnameLabel" />

    <EditText
        android:layout_below="@id/surnameLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/surname"
        android:background="@drawable/editext"
        android:textSize="30dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_below="@id/surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/mail"
        android:id="@+id/mailLabel" />

    <EditText
        android:layout_below="@id/mailLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/mail"
        android:background="@drawable/editext"
        android:textSize="30dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_below="@id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/pwd"
        android:id="@+id/pwdLabel" />

    <EditText
        android:layout_below="@id/pwdLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pwd"
        android:background="@drawable/editext"
        android:textSize="30dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_below="@id/pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/confirm"
        android:id="@+id/confirmLabel" />

    <EditText
        android:layout_below="@id/confirmLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/confirm"
        android:background="@drawable/editext"
        android:textSize="30dp"
        android:layout_marginTop="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirm"
        android:id="@+id/action"
        android:layout_marginTop="10dp">

        <Button
            style="?android:attr/negativeButtonText"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:id="@+id/cancel"
            android:layout_weight="0.45"
            android:background="@drawable/button_quit"
            android:layout_gravity="right"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/positiveButtonText"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/valid"
            android:id="@+id/valid"
            android:layout_weight="0.45"
            android:background="@drawable/button_start"
            android:layout_gravity="left"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/HibernateMappingDTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="fr.esigelec.quiz.dto">
	<class name="Personne" table="personne">
	
		<id name="id" column="id">
			<generator class="native"/>
		</id>
		
		<property name="nom" column="nom" type="string"/>
		<property name="prenom" column="prenom" type="string"/>
		<property name="mail" column="mail" type="string"/>
		<property name="mdp" column="mdp" type="string"/>
		<property name="droits" column="droits" type="int"/>
		
	</class>
</hibernate-mapping>
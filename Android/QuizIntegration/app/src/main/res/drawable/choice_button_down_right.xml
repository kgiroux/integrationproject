<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <rotate
            android:fromDegrees="180"
            android:toDegrees="180"
            android:pivotX="50%"
            android:pivotY="50%"
            android:drawable="@drawable/choice_selected" />
    </item>
    <item android:state_selected="true">
        <rotate
            android:fromDegrees="180"
            android:toDegrees="180"
            android:pivotX="50%"
            android:pivotY="50%"
            android:drawable="@drawable/choice_selected" />
    </item>
    <item android:state_activated="true">
        <rotate
            android:fromDegrees="180"
            android:toDegrees="180"
            android:pivotX="50%"
            android:pivotY="50%"
            android:drawable="@drawable/choice_trueanswer" />
    </item>
    <item>
        <rotate
            android:fromDegrees="180"
            android:toDegrees="180"
            android:pivotX="50%"
            android:pivotY="50%"
            android:drawable="@drawable/choice_unselected" />
    </item>
</selector>